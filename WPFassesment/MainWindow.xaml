<Window x:Class="WPFassesment.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Recruitment System"
        Height="650" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#f5f5f5">

    <Grid Margin="3">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="4*" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="10,0,20,0"  VerticalAlignment="Top">
            <TextBlock Text="Add / Edit Contractor"
                       FontSize="18"
                       FontWeight="Bold"
                       Margin="0,0,0,20" />

            <TextBlock Text="First Name" Margin="0,0,0,4"/>
            <TextBox   x:Name="FirstNameTextBox"
                       Height="28"
                       Margin="0,0,0,12"/>

            <TextBlock Text="Last Name" Margin="0,0,0,4"/>
            <TextBox   x:Name="LastNameTextBox"
                       Height="28"
                       Margin="0,0,0,12"/>

            <TextBlock Text="Hourly Wage" Margin="0,0,0,4"/>
            <TextBox   x:Name="WageTextBox"
                       Height="28"
                       Margin="0,0,0,20"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <Button x:Name="AddButton"
                    Content="Add"
                    Width="133"
                    Margin="0,0,35,0"
                    Click="AddButton_Click"/>
                <Button x:Name="SearchButton"
                    Content="Search"
                    Width="133"
                    Click="SearchButton_Click"/>
            </StackPanel>

            <TextBlock x:Name="StatusText"
                    Text=""
                    Foreground="Gray"
                    Margin="0,10,0,0"
                    TextWrapping="Wrap"
                    MaxWidth="250"/>

        </StackPanel>
        <ScrollViewer Grid.Column="1" Margin="0,0,0,0" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="Contractors"
                   FontSize="18"
                   FontWeight="Bold"
                   Margin="0,0,0,10" />

                <ListBox x:Name="ContactListBox"
                 Height="200"
                 BorderThickness="1"
                 BorderBrush="#ccc"
                 Background="White"
                 Padding="5" 
                 DisplayMemberPath="FullName"
                 SelectionChanged="ContactListBox_SelectionChanged"/>

                <Button x:Name="RemoveButton"
                Content="Remove Selected"
                HorizontalAlignment="Stretch"
                Margin="0,5,0,10"
                Click="RemoveButton_Click"/>

                <TextBlock Text="Add Job"
                   FontSize="18"
                   FontWeight="Bold"
                   Margin="0,20,0,10" />

                <TextBlock Text="Job Title" Margin="0,0,0,4"/>
                <TextBox x:Name="JobTitleTextBox"
                 Height="28"
                 Margin="0,0,0,8"/>

                <TextBlock Text="Job Date (optional)" Margin="0,0,0,4"/>
                <DatePicker x:Name="JobDatePicker"
                    Margin="0,0,0,8"/>

                <TextBlock Text="Job Cost" Margin="0,0,0,4"/>
                <TextBox x:Name="JobCostTextBox"
                 Height="28"
                 Margin="0,0,0,10"/>

                <Button x:Name="AddJobButton"
                Content="Add Job"
                Width="133"
                Margin="0,0,0,10"
                Click="AddJobButton_Click"/>

                <TextBlock Text="Jobs"
                   FontSize="18"
                   FontWeight="Bold"
                   Margin="0,10,0,5" />

                <ListBox x:Name="JobListBox"
                 Height="180"
                 BorderThickness="1"
                 BorderBrush="#ccc"
                 Background="White"
                 Padding="5"
                 DisplayMemberPath="Title"/>

                <Button x:Name="AssignJobButton"
                Content="Assign Selected Job to Selected Contractor"
                Margin="0,10,0,0"
                Click="AssignJobButton_Click"/>

                <Button x:Name="CompleteJobButton"
                Content="Mark Selected Job Completed"
                Margin="0,5,0,0"
                Click="CompleteJobButton_Click"/>
            </StackPanel>
        </ScrollViewer>


    </Grid>
</Window>