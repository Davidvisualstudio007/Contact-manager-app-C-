<Window x:Class="WPFassesment.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Contact Manager"
        Height="500" Width="850"
        WindowStartupLocation="CenterScreen"
        Background="#f5f5f5">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>
        
        <StackPanel Grid.Column="0" Margin="10,0,20,0"  VerticalAlignment="Top">
            <TextBlock Text="Add / Edit Contact"
                       FontSize="18"
                       FontWeight="Bold"
                       Margin="0,0,0,20" />

            <TextBlock Text="Full Name" Margin="0,0,0,4"/>
            <TextBlock x:Name=" FullNameTextBox"
                       Height="28"
                       Margin="0,0,0,12"/>
            
        </StackPanel>
    </Grid>
</Window>